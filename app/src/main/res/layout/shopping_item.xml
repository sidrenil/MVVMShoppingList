<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools2="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#D39FA7"
        tools:layout_constraintBottom_toBottomOf="@+id/tvName"
        tools:layout_constraintTop_toBottomOf="@+id/tvName">


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_constraintStart_toStartOf="parent"
            android:layout_constraintTop_toTopOf="parent"
            android:layout_weight="9"
            android:text="Name"
            android:textColor="@android:color/white"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_constraintEnd_toEndOf="parent"
            android:layout_constraintStart_toStartOf="@+id/ivMinus"
            android:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"
            android:text="Amount"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            tools2:layout_editor_absoluteX="16dp"
            tools2:layout_editor_absoluteY="99dp" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_constraintTop_toBottomOf="@+id/tvName"
            android:layout_constraintStart_toStartOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_minus_delete"
            android:textSize="20sp"
            tools2:layout_editor_absoluteX="131dp"
            tools2:layout_editor_absoluteY="48dp" />

        <ImageView
            android:id="@+id/ivPlus"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_constraintTop_toBottomOf="@+id/tvAmount"
            android:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_launcher_foreground"
            android:textSize="20sp"
            tools2:layout_editor_absoluteX="239dp"
            tools2:layout_editor_absoluteY="27dp" />

        <ImageView
            android:id="@+id/ivMinus"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_constraintEnd_toStartOf="@+id/ivPlus"
            android:layout_constraintTop_toBottomOf="@+id/tvAmount"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_minus_foreground"
            android:textSize="20sp"
            tools2:layout_editor_absoluteX="227dp"
            tools2:layout_editor_absoluteY="83dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>