<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:background="#D39FA7"
    app:ignore="NamespaceTypo">


    <TextView
        android:id="@+id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:text="Name"
        android:layout_margin="20sp"
        android:textColor="@android:color/white"
        android:textSize="25sp" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:id="@+id/tvAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivMinus"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Amount"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_marginRight="30dp" />


    <ImageView
        android:layout_margin="20sp"
        android:id="@+id/ivDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_minus_delete"
        android:textSize="20sp" />

    <ImageView
        android:layout_margin="20sp"
        android:id="@+id/ivPlus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAmount"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_launcher_foreground"
        android:textSize="20sp" />

    <ImageView
        android:layout_margin="20sp"
        android:id="@+id/ivMinus"
        app:layout_constraintEnd_toStartOf="@+id/ivPlus"
        app:layout_constraintTop_toBottomOf="@+id/tvAmount"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_minus_foreground"
        android:textSize="20sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>